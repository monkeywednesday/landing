header.page-header
	// RD Navbar
	.rd-navbar-wrap
		nav.rd-navbar.rd-navbar_transparent.rd-navbar_transparent-landing(
		data-layout='rd-navbar-fixed',
		data-sm-layout='rd-navbar-fixed',
		data-sm-device-layout='rd-navbar-fixed',
		data-md-layout='rd-navbar-fixed',
		data-md-device-layout='rd-navbar-fixed',
		data-lg-device-layout='rd-navbar-fixed',
		data-xl-device-layout='rd-navbar-static',
		data-xxl-device-layout='rd-navbar-static',
		data-lg-layout='rd-navbar-fullwidth',
		data-xl-layout='rd-navbar-static',
		data-xxl-layout='rd-navbar-static',
		data-stick-up-clone='false',
		data-sm-stick-up='true',
		data-md-stick-up='true',
		data-lg-stick-up='true',
		data-xl-stick-up='true',
		data-xxl-stick-up='true',
		data-lg-stick-up-offset='100px',
		data-xl-stick-up-offset='100px',
		data-xxl-stick-up-offset='100px',
		data-body-class='rd-navbar-absolute rd-navbar_transparent-linked')
			.rd-navbar-top-panel
			.rd-navbar-inner
				// RD Navbar Panel
				.rd-navbar-panel
					button.rd-navbar-toggle(data-rd-navbar-toggle='.rd-navbar-nav-wrap'): span

					// RD Navbar Brand
					.rd-navbar-brand
						a.brand-name(href='index.html')
							+png(logoDefault)

				// RD Navbar Nav
				.rd-navbar-aside-right
					.rd-navbar-nav-wrap
						// RD Navbar Nav
						ul.rd-navbar-nav
							li
								.rd-navbar-button-fixed
									a(target='_blank' href=buyHref).button.button-white Buy template
							li(class='active')
								a(href='#home') Home
							li
								a(href='#features') Features
							li
								a(href='#niche') Niche Layouts
							li
								a(href='#pages') Pages
							li
								a(href='#updates') Updates

				.rd-navbar-button
					a(target='_blank' href=buyHref).button.button-white Buy template
