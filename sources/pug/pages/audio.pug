extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs

block variables
  - var activeIndex = 7
  - var pageName = 'Audio'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.section-xl.bg-default
    .container
      .row.row-50.justify-content-center.justify-content-lg-start
        .col-lg-12
          .jp-player-init.jp-player-js.jp-player-wide 
            .jp-jplayer
            .jp-audio.jp-audio-0(role='application', aria-label='media player')
              ul.jp-player-list
                li.jp-player-list-item(data-jp-title="Cro Magnon Man",
                data-jp-artist="The Stark Palace",
                data-jp-mp3="audio/sound.mp3")
              .jp-meta
                .unit.flex-md-row.align-items-center.unit-spacing-xlg
                  .unit-left
                    +jpg('timeline-1-109x109', 'rounded-circle')
                  .unit-body
                    h5.jp__title Installing Your First HTML Template
                    p.jp__author by Brian Williamson

              .jp-interface
                .jp-controls-wrapper
                  .jp-button.jp-playpaus-button
                    button.jp-btn.jp-play(role='button', tabindex='0')
                  .jp-time-rail
                    .jp-progress
                      .jp-seek-bar
                        .jp-play-bar
                  .jp-time-wrapper
                    .jp-current-time 00:00
                .jp-volume-wrapper
                  .jp-button.jp-volume-button
                    button.jp-btn.jp-mute(role='button', tabindex='0')
                  .jp-volume-bar
                    .jp-volume-bar-value
